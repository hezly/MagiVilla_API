            </div>
            <div class="col-10 mb-3">
                <textarea asp-for="Amenity" class="form-control" disabled></textarea>
            </div>
            <div class="col-5 offset-2">
                <a asp-action="IndexVilla" class="btn-primary btn form-control">Back to List</a>
